@model WeatherMap.UI.Models.CurrentConditionsVM
@{
	ViewBag.Title = "Home";
}

<main>
	<section class="row g-3" aria-labelledby="currentLocalWeather">

		<div class="col-md-6 h-100" id="currentConditionsCard" style="display: none;">
			<div class="card p-0">
				<div class="card-header">
					<h5>Current Conditions</h5>
					<p class="m-0">Your Weather Now</p>
				</div>
				<div class="card-body" id="currentConditionsContainer">
					@Html.Partial("_CurrentConditions", Model)
				</div>
			</div>
		</div>

		<div class="col-12 h-100" id="mapCard">
			<div class="card p-0 ">
				<div class="card-header">
					<h5>Get Local Forecasts</h5>
					<p class="m-0">Click your location on the map</p>
				</div>
				<div class="card-body p-0">
					<div id="map" style="width:100%; min-height:600px; height:100%"></div>
				</div>
			</div>
		</div>
	</section>
</main>

@section Scripts {
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCuVkBnorByEyoNtGrqnQzlyAHSZEXYskI&callback=initMap" async defer></script>
	<script src="~/Scripts/GoogleMaps/googleMaps.js"></script>
}